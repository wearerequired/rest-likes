      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.0",
    "wearerequired/traduttore-registry": "^2.0"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
    "phpunit/phpunit": "^6.5",
    "wearerequired/coding-standards": "^2.1"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.1.x-dev"
    }
  },
  "autoload": {
    "psr-4": {
      "Required\\RestLikes\\": "classes"
    }
  },
  "scripts": {
    "format": "vendor/bin/phpcbf --report-summary --report-source .",
    "lint": "vendor/bin/phpcs --report-summary --report-source .",
    "test": "vendor/bin/phpunit"
  }
}
